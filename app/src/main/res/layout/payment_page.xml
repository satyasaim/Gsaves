<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bt_final_startscan"
        android:layout_width="132dp"
        android:layout_height="50dp"

        android:layout_marginStart="38dp"

        android:layout_marginTop="30dp"

        android:layout_marginEnd="38dp"
        android:background="@drawable/signup"
        android:fontFamily="@font/droidserif_regular"
        android:text="Start Scan"
        android:textColor="@color/fontColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_receiver_msg"
        tools:textSize="15sp" />

    <Button
        android:id="@+id/bt_final_logout"
        android:layout_width="132dp"
        android:layout_height="50dp"

        android:layout_marginStart="38dp"

        android:layout_marginTop="30dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/signup"
        android:fontFamily="@font/droidserif_regular"
        android:text="Log Out"
        android:textColor="@color/fontColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_receiver_msg"
        tools:textSize="15sp" />

    <TextView
        android:id="@+id/tv_reciever_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="177dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="177dp"
        android:fontFamily="@font/droidserif_bold"
        android:text="Reciever Status"
        android:textSize="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_reciever_email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/droidserif_bold"
        android:text="Email :"
        app:layout_constraintEnd_toStartOf="@+id/tv_receiver_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_reciever_status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/droidserif_bold"
        android:text="Status :"
        app:layout_constraintEnd_toStartOf="@+id/tv_receiver_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_reciever_email_title" />

    <TextView
        android:id="@+id/tv_receiver_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/droidserif_bold"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_reciever_email_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_reciever_status" />

    <TextView
        android:id="@+id/tv_receiver_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/droidserif_bold"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_reciever_status_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_receiver_email" />

    <TextView
        android:id="@+id/tv_receiver_msg"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="178dp"
        android:gravity="center"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_gsaves_logo" />


    <Button
        android:id="@+id/bt_receiver_mail"
        android:layout_width="132dp"
        android:layout_height="50dp"

        android:layout_marginStart="38dp"

        android:layout_marginTop="30dp"

        android:layout_marginEnd="38dp"
        android:background="@drawable/signup"
        android:fontFamily="@font/droidserif_regular"
        android:text="Send Mail"
        android:textColor="@color/fontColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_receiver_msg"
        tools:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_gsaves_logo"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_receiver_status"
        app:srcCompat="@drawable/logo" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_img1"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_receiver_status" />


</android.support.constraint.ConstraintLayout>