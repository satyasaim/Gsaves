<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fff"/>
            <stroke android:width="1dp" android:color="#807d7d" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:gravity="center_vertical|right" android:right="8dp">
        <layer-list>
            <item android:width="14dp" android:height="9dp"  android:gravity="center" android:bottom="8dp">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#6b6a6a" />
                        <stroke android:color="#080808" android:width="1dp"/>
                    </shape>
                </rotate>
            </item>
            <item android:width="25dp" android:height="16dp" android:bottom="15dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <stroke android:width="4dp" android:color="#00807d7d"  />
                    <solid android:color="#fff"/>
                </shape>
            </item>
        </layer-list>


    </item>
</layer-list>
